{{#if resume.education.length}}
<div class="container education-container">
    {{> title value="Education"}}

    {{#each resume.education}}
        <section class="item">
            {{> section-header name=this.institution prefix=(concat this.studyType " in " this.area) }}

            {{!-- <h4>{{#if studyType}}{{studyType}} {{/if}}{{#if area}}{{area}}{{/if}}</h4> --}}

            {{#if score}}
            <h5>{{{filter score "markdown"}}}</h5>
            {{/if}}

            {{#if courses.length}}
            <ul class="two-column">
                {{#each courses}}
                <li>{{{filter . "markdown"}}}</li>
                {{/each}}
            </ul>
            {{/if}}

            {{#if highlights.length}}
            <ul>
                {{#each highlights}}
                <li class="block">{{{filter . "markdown"}}}</li>
                {{/each}}
            </ul>
            {{/if}}
        </section>
    {{/each}}
</div>
{{/if}}