{{#resume.basics}}
<div class="container about-container">
    {{!-- {{> title value="About"}} --}}

    {{#if nationality}}
        {{> info-tag text=this.nationality icon="fa-font-awesome" url=null }}
    {{/if}}

    {{#if location}}
        {{#location}}
        {{#if formatAddress}}
            {{> info-tag text=this.formatAddress icon="fa-map-marker"}}
        {{else}}
            {{> info-tag text=(address city region postalCode countryCode) icon="fa-map-marker"}}
        {{/if}}
        {{/location}}
    {{/if}}

    {{#if email}}
        {{> info-tag text=this.email icon="fa-envelope-o"}}
    {{/if}}

    {{#if phone}}
        {{> info-tag text=this.phone icon="fa-mobile"}}
    {{/if}}

    {{#if website}}
        {{> info-tag text=this.website icon="fa-desktop" url=this.website}}
    {{/if}}

    {{#if profiles}}
        {{#each profiles}}
            {{> social}}
        {{/each}}
    {{/if}}
</section>
{{/resume.basics}}