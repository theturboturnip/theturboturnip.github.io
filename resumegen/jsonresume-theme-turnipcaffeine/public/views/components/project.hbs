{{#if resume.projects.length}}
<div class="container work-container">
    {{> title value="Projects"}}

    {{#each resume.projects}}
        <section class="item">
            {{> section-header name=this.name }}

            {{#if summary}}
            <p class="summary">{{{filter summary "markdown"}}}</p>
            {{else if description}}
            <p class="summary">{{{filter description "markdown"}}}</p>
            {{/if}}

            {{#if highlights.length}}
            <ul>
                {{#each highlights}}
                <li>{{{filter . "markdown"}}}</li>
                {{/each}}
            </ul>
            {{/if}}
        </section>
    {{/each}}
</div>
{{/if}}